.board
  width 400px
  height 400px
  position relative
  overflow hidden
  z-index 2
  transition opacity ease-in-out 2s
  
  &.new
  &.win
  &.watch
    opacity 0.1
    &:before
      width 100%
      height 100%
      position absolute
      content ''
      z-index 2
  
  &-item
    z-index 1
    display block
    width 40px
    height 40px
    position absolute
    border 1px solid black
    opacity 0.5
    box-sizing border-box
    cursor pointer
    
